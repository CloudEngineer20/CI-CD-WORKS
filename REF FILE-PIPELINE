# [START dockerfile]
FROM python:3.7-slim
RUN pip install flask
WORKDIR /app
COPY app.py /app/app.py
ENTRYPOINT ["python"]
CMD ["/app/app.py"]
# [END dockerfile]

#K8S YAML FILE
# Copyright 2018 Google LLC
